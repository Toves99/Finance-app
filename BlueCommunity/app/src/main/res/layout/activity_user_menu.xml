<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/blue"
    tools:context=".UserMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/contact_bacground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loans"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"/>






        <Button
            android:id="@+id/payLoan"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/teal_700"
            android:drawableRight="@drawable/ic_baseline_arrow_circle_right_24"
            android:gravity="left"
            android:padding="14dp"
            android:text="Pay loan"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/loanMore"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/teal_700"
            android:drawableRight="@drawable/ic_baseline_arrow_circle_right_24"
            android:gravity="left"
            android:padding="14dp"
            android:text="More.."
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.506" />

        <Button
            android:id="@+id/borrowLoan"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/teal_700"
            android:drawableRight="@drawable/ic_baseline_arrow_circle_right_24"
            android:gravity="left"
            android:padding="14dp"
            android:text="Borrow"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payLoan" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/about_us_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/con1"
        app:layout_constraintVertical_bias="0.044"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Savings"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:padding="6dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="55dp" />

        <Button
            android:id="@+id/save"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/teal_700"
            android:drawableRight="@drawable/ic_baseline_arrow_circle_right_24"
            android:gravity="left"
            android:padding="14dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/balanceSave"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/teal_700"
            android:drawableRight="@drawable/ic_baseline_arrow_circle_right_24"
            android:gravity="left"
            android:padding="14dp"
            android:text="Balance"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="65dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/help_bacground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.106"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscription"
            android:layout_marginStart="7dp"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="56dp" />

        <Button
            android:id="@+id/subscriptionBalance"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/teal_700"
            android:drawableRight="@drawable/ic_baseline_arrow_circle_right_24"
            android:gravity="left"
            android:padding="14dp"
            android:text="Balance"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/paySubscription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.927"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/paySubscription"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/teal_700"
            android:drawableRight="@drawable/ic_baseline_arrow_circle_right_24"
            android:gravity="left"
            android:padding="14dp"
            android:text="Pay Now"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.927"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.789" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/cut_card_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintVertical_bias="0.203"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Events"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="8dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/teal_700"
            android:drawableRight="@drawable/ic_baseline_arrow_circle_right_24"
            android:gravity="left"
            android:padding="14dp"
            android:text="proceed"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:cornerRadius="20dp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="55dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_circle_notifications_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.422" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Notifications"
            android:textColor="@color/blue"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>